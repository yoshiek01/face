    <h3>以下の内容でお問い合わせ</h3>

    <%= form_for(@contact) do |f| %>

      <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>

      <!-- @contact.nameと@contact.emailと@contact.contentとすることで、表示用の値を画面に出力しています。 -->
      <p>お名前:<%= @contact.name %></p>
      <p>メールアドレス：<%= @contact.email %></p>
      <p>本文:<%= @contact.content %></p>
      <%= f.submit "送信する",class: 'btn btn-primary btn-block' %>
    <% end %>

    <%= form_for(@contact) do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる",name: 'back',class: 'btn btn-default btn-block' %>
    <% end %>
