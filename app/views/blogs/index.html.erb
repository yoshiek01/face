<div class = "content">
 <main id = "main">
    <p><%= notice %></p>
    <h1>index</h1>
      <%= link_to "いまなにしてる？", new_blog_path, class: 'btn btn-default' %>
      <!-- btnはボタン-->

      <% @blogs.each do |blog| %>
       <div class="row">
           <!-- ブログのタイトルにlink_toでリンクを設定します。 -->
           <%= link_to blog_path(blog) do %>
            <h2><strong><%= blog.title %></strong></h2>
           <% end %>

           <h3><%= blog.user.name %></h3>
           <h4><%= profile_img(blog.user) %></h4>
           <p><%= blog.content %></p>

           <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
           <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
        <% end %>

       </div>

 </main>
    
 <div id = "side">
    <h3>サイドメニュー</h3>
    <li><%= link_to "お問い合わせ", new_contact_path %></li>
    <li><%= link_to '友達一覧', users_path if user_signed_in? %></li>
    <li><%= link_to "メッセージ", conversations_path %></li>
    <li><%= link_to "一覧画面にもどる", blogs_path %></li>
 </div>
</div>