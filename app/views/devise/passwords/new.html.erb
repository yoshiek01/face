   <h2>パスワード再設定</h2>

    <%= alert %>

     <%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :post }) do |f| %>
     
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="actions">
        <%= f.submit "再設定メールを送信する", class: "btn btn-primary btn-block"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
